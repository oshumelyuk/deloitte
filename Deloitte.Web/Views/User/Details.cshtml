@model Deloitte.Entities.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <h2>
        <span>@Html.ActionLink("Users", "index", "user") </span>
        @if (Model != null)
        {
            <span> &gt; @Html.Raw(Model.Name)</span>
        }
        else
        {
            <span> &gt; User not found</span>
        }
    </h2>
    @if (Model != null)
    {
        <div>
            <div class="user-photo">
                <img src='@Url.Action("photo", "user", new { id = Model.Id})' />
            </div>
            <div class="user-details">
                <div class="form-group">
                    <span class="col-md-2 label">Name</span>
                    <span class="col-md-8">@Html.Raw(Model.Name) </span>
                </div>
                <div class="form-group">
                    <span class="col-md-2 label">Gender</span>
                    <span class="col-md-8">@Html.Raw(Model.Gender) </span>
                </div>
                <div class="form-group">
                    <span class="col-md-2 label">Company</span>
                    <span class="col-md-8">@Html.Raw(Model.Company) </span>
                </div>
                <div class="form-group">
                    <span class="col-md-2 label">Phone</span>
                    <span class="col-md-8">@Html.Raw(Model.Phone) </span>
                </div>
                <div class="form-group">
                    <span class="col-md-2 label">Address</span>
                    <span class="col-md-8">@Html.Raw(Model.Address) </span>
                </div>
                <div class="form-group">
                    <span class="col-md-2 label">About</span>
                    <span class="col-md-8">@Html.Raw(Model.About) </span>
                </div>
                <div class="form-group">
                    <span class="col-md-2 label">Tags</span>
                    <span class="col-md-8">
                        @foreach (var tag in Model.Tags)
                        {
                            <span># @Html.Raw(tag)</span>
                        }
                    </span>
                </div>
            </div>

        </div>
    }

</section>


